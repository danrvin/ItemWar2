<html>
<body>
<div>
    <a href="/profile"><<==</a>
</div>
<div>
    Your money:
    {{#money}}
        {{money}}
    {{/money}}
</div>
<div>
    <form method="post" action="/inventories/buyButton">
        <span>Choose inventory</span>
        <div>
            <label>
                Enter inventory id: <input type="number" name="invnetoryid" required="required" id="txtInventoryId">
                <button type="submit" id="cmdChoseInventory">Buy</button>
            </label>
        </div>
    </form>
</div>
<div>Inventory list</div>
{{#inventories}}
    <div>
        <d>{{id}}</d>
        <span>{{name}}</span>
        <strong>{{authorName}}</strong>
        <span>{{price}}</span>
    </div>
{{/inventories}}

<script>
    cmdChoseInventory.addEventListener("click", function () {
        addInventoryFromUser("/inventories/buyButton", txtInventoryId.value)
    })

    function addInventoryFromUser() {
        var xhr = new XMLHttpRequest();
        xhr.open("POST", arguments[0], false);
        xhr.setRequestHeader('Content-type', 'application/json; charset=utf-8');
        bodyStr = arguments[1]
        xhr.send(bodyStr)
        //document.location.href = "http://localhost:8080/html/" + xhr.responseText
        document.location.href = "profile.mustache"
    }
</script>
</body>
</html>